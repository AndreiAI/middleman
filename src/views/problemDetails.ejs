<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="/css/problemDetails.css">
    
    <title>Middleman</title>
</head>

<body>
    <div class="wrapper">
        <img class="backgroundImg" src="/img/rectangle.png"/>
        <h1>
            Problem <%= result._id %> details.
        </h1>
        <p>
            Description:
            <%=result.description%>
        </p>
        <p>
            Address:
            <%- JSON.stringify(result.address)%>
        </p>
        <p>
            Phone:
            <%=result.phone%>
        </p>
        <p>
            Type:
            <%=result.type%>
        </p>
        <p>
            Fixer:
            <%=result.fixer%>
        </p>
        <p>
            Deadline:
            <%=result.deadline%>
        </p>
        <div class="updates">
            <h2>
                Updates:
            </h2>
            <div class="updatesList">
                <% for(var i = 0; i < result.updates.length; i ++) { %>
                    <p>
                         <script>document.write(new Date("<%= result.updates[i].timestamp %> UTC").toString().split("GMT")[0]);</script> - <%= result.updates[i].authorFirstName %>: <%= result.updates[i].update %>
                    </p>
                <% } %>
            </div>
        </div>
        <form action="/problem/<%= result._id %>" method="post">
            <textarea rows="2" name="update" placeholder="Update"></textarea>
            <input type="submit" value="Send" />
        </form>
        <% if(result.user.type === "fixer" && result.status === "onGoing" && typeof result.requestCompletedFixer == 'undefined') { %>
            <form action="/problem/complete/<%= result._id %>" method="post">
                <input type="submit" value="Mark as complete" />
            </form>
        <% } %>
        <% if(result.user.type === "handler" && result.status === "onGoing") { %>
            <form action="/problem/complete/<%= result._id %>" method="post">
                <input type="submit" value="Mark as complete" />
            </form>
        <% } %>
        <% if(result.user.type === "client" && result.status === "completed" && typeof(result.rating) === "undefined") { %>
            <form action="/problem/rating/<%= result._id %>" method="post">
                <input name="rating" type="number" placeholder="5" required/>
                <input type="submit" value="Rate" />
            </form>
        <% } %>
        <form id="backButton" action="/" method="get">
            <input type="submit" value="Back" />
        </form>
    </div>
</body>

</html>
